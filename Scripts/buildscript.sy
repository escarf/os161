#!/bin/bash
#this helps build/install os161
cd ~/src
rm -rf os161
git clone https://github.com/escarf/os161.git
cd os161/kern/conf
./config ASST1
cd ../compile/ASST1
bmake depend
bmake
cd ..
cd ..
bmake
bmake install
cd ~/src/os161
bmake
bmake install
cd ~/os161/root
cd ~
wget -O ~/os161/root/sys161.conf "https://www.ops-class.org/files/sys161.conf"
cd ..
sudo cp trinity/os161/root/sys161.conf vagrant
